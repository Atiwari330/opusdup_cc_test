{
  "manifest_version": 3,
  "name": "EHR Live Transcription",
  "version": "1.0.0",
  "description": "Real-time audio transcription for mental health sessions with AI-powered EHR analysis",
  "minimum_chrome_version": "116",
  
  "permissions": [
    "tabCapture",
    "sidePanel",
    "offscreen",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.meet.google.com/*",
    "https://*.zoom.us/*",
    "https://*.teams.microsoft.com/*",
    "https://*.youtube.com/*",
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_title": "Open EHR Transcription Panel",
    "default_popup": "popup.html"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://localhost:3000 wss://localhost:3000 http://localhost:3000 https://localhost:3000"
  }
}